<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ConfirmationCodeCell.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grey2</item>
        <item name="cursorColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
    </style>

    <style name="ConfirmationCodeCell.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextConfirmationCodeCell</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="TextConfirmationCodeCell">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>