<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="vacancyTextBlockInfo"
            type="com.imysko.features.vacancyDetail.presentation.entities.VacancyTextBlockAdapterModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            style="@style/TextAppearance.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vacancyTextBlockInfo.title}"
            android:visibility="@{vacancyTextBlockInfo.title != null ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/text"
            style="@style/TextAppearance.Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vacancyTextBlockInfo.text}" />

    </LinearLayout>
</layout>