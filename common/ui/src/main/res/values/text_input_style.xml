<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicTextInput.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/grey2</item>
        <item name="cursorColor">@color/white</item>
        <item name="cursorErrorColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="helperTextTextAppearance">@style/TextFieldDescription</item>
        <item name="startIconTint">@color/grey4</item>
        <item name="endIconTint">@color/white</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="BasicTextField.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text1</item>
        <item name="maxLines">1</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="hintTextColor">@color/grey4</item>
    </style>
</resources>